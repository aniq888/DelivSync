<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Details"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <!-- Customer Information -->
        <LinearLayout
            android:id="@+id/customerInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="Customer Name" 
                android:textStyle="bold"/>
            <TextView 
                android:id="@+id/tvCustomerPhone"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="Phone Number" 
                android:textColor="#6A6F6E"/>
        </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:id="@+id/addressCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/tvCustomerAddress"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="Address" 
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- COD Amount and Status -->
        <LinearLayout
            android:id="@+id/codStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tvCODAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="COD: $0.00" 
                android:textStyle="bold"/>
            <TextView 
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: PENDING"
                android:textColor="#6A6F6E"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavigate"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Navigate"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCaptureProof"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Capture Proof of Delivery"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCaptureSignature"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Capture Signature"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkDelivered"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Mark as Delivered"
            android:textAllCaps="false"
            android:backgroundTint="#10A87D"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
